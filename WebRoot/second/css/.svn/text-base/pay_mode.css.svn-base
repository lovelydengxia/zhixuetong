.pay_w{
    margin: 15px 40px;
}
.pay-ab{
    padding: 25px;
    border: 2px solid #fff;
}
.pay-ab label{
    display: block;
    background: red;
    width: 100%;
}
.pay-ab span{
    text-align: center;
    font-size: 14px;
    line-height: 30px;
    float: left;
}
.ico{
    display: inline-block;
    width: 30px;
    height: 30px;
    background: url("../img/select_1.png") no-repeat;
}

.pay_act{
    border: 2px solid #00C7F2;
}
.pay_act .ico{
    background: url("../img/select.png") no-repeat;
}
.pay-amount{
    text-align: center;
    margin-right: 17px;
    margin-left: 5px;
    padding: 0 10px;
    float: right !important;
}
.pay_lg{
    margin-left: 50px;
    min-width: 50px;
}
.channel-name{
    margin: 0 10px;
    min-width: 120px;
}
.card-number{
    margin: 0 10px;
    min-width: 160px;
    color:red;
}
.card-type{
    margin: 0 10px;
    min-width: 140px;
}
.pay-money{
    margin: 0 10px 0 0;
    font-size: 16px !important;
    color: #ff8208;
    font-weight: 600;
}
.yue_tip{
	color:red;
}